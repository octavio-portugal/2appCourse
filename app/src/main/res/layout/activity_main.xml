<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/edit_peso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="20dp"
        android:hint="Peso"
        android:padding="20dp"
        android:textColor="@color/AzulEscuro"
        android:textColorHint="@color/AzulEscuro" />

    <EditText
        android:id="@+id/edit_altura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/edit_peso"
        android:hint="Altura"
        android:padding="20dp"
        android:textColor="@color/AzulEscuro"
        android:textColorHint="@color/AzulEscuro" />


    <Button
        android:id="@+id/btn_calcular"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Calcular IMC"
        android:textColor="@color/Branco"
        android:background="@color/AzulEscuro"
        android:layout_below="@id/edit_altura"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <ImageView
        android:id="@+id/ic_deletar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/edit_altura"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/btn_calcular"
        android:src="@drawable/ic_delete"/>

    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/AzulEscuro"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_below="@id/btn_calcular"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />


</RelativeLayout>
